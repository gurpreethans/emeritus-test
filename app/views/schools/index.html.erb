<div class="col py-3">
  <div class="row">
    <div class="col-md-9 mx-2">
      <h3>Schools</h3>
    </div>
    <div class="col-md-2 mx-2">
      <%= link_to 'Create School', new_school_path, class: 'btn btn-primary' %>
    </div>
    <hr>
  </div>
  <div class="row">
    <%= render 'shared/flash' %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <th scope="row"><%= school.id %></th>
            <td><%= school.name %></td>
            <td><%= school.description %></td>
            <td>
              <%= link_to 'Courses', my_school_courses_path(school), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-primary' %>
              <%= link_to 'Destroy', school_path(school), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
