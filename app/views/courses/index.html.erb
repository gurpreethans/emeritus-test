<div class="col py-3">
  <div class="row">
    <div class="col-md-9 mx-2">
      <h3>Courses</h3>
    </div>
    <div class="col-md-2 mx-2">
      <%= link_to 'Create Course', new_my_school_course_path, class: 'btn btn-primary' %>
    </div>
    <hr>
  </div>
  <div class="row">
    <%= render 'shared/flash' %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <th scope="row"><%= course.id %></th>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td>
              <%= link_to 'Batches', my_school_course_batches_path(@school, course), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_my_school_course_path(@school, course), class: 'btn btn-primary' %>
              <%= link_to 'Destroy', my_school_course_path(@school, course), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
