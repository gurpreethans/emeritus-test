<div class="col py-3">
  <div class="row">
    <div class="col-md-9 mx-2">
      <h3>Enrollments</h3>
    </div>
    <div class="col-md-2 mx-2">
      <%= link_to 'Add Students', new_my_school_course_batch_enrollment_path, class: 'btn btn-primary' %>
    </div>
    <hr>
  </div>
  <div class="row">
    <%= render 'shared/flash' %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |enrollment| %>
          <tr>
            <th scope="row"><%= enrollment.id %></th>
            <td><%= enrollment.name %></td>
            <td><%= enrollment.email %></td>
            <td><%= enrollment.status %></td>
            <td>
              <% if enrollment.status == Enrollment::PENDING %>
                <%= link_to 'Approve', update_status_my_school_course_batch_enrollment_path(@school, @course, @batch, enrollment, status: Enrollment::APPROVED), class: 'btn btn-success' %>
                <%= link_to 'Reject', update_status_my_school_course_batch_enrollment_path(@school, @course, @batch, enrollment, status: Enrollment::REJECTED), class: 'btn btn-warning' %>
              <% end %>
              <%= link_to 'Destroy', my_school_course_batch_enrollment_path(@school, @course, @batch, enrollment), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
