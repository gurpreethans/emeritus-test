<div class="container pt-5">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
        <!-- Email input -->
        <div class="form-outline mb-4">
          <%= f.label :email, class: "form-label", for: "form2Example1" %><br />
          <%= f.email_field :email, autofocus: false, autocomplete: "email", id: "form2Example1", class: "form-control" %>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.label :password, class: "form-label", for: "form2Example2" %><br />
          <%= f.password_field :password, autocomplete: "current-password", id: "form2Example2", class: "form-control" %>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: 'form-check-input', checked: true, id: "form2Example31" %>
                <%= f.label :remember_me, class: 'form-check-label', for: "form2Example31" %>
              </div>
            <% end %>
          </div>

          <div class="col">
            <!-- Simple link -->
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %>
            <% end %>
          </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4" style="width: 100%">Sign in</button>

        <!-- Register buttons -->
        <div class="text-center">
          <p>Not a member? <%= link_to "Register", new_registration_path(resource_name) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>