<div class="col py-3">
  <div class="row">
    <div class="col-md-8 mx-2">
      <h3>School Admins</h3>
    </div>
    <div class="col-md-3 mx-2">
      <%= link_to 'Create School Admin', new_school_admin_path, class: 'btn btn-primary' %>
    </div>
    <hr>
  </div>
  <div class="row">
    <%= render 'shared/flash' %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">School Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <th><%= admin.id %></th>
            <th><%= admin.name %></th>
            <td><%= admin.email %></td>
            <td><%= admin.school_name %></td>
            <td>
              <%= link_to 'Destroy', school_admin_path(admin), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
